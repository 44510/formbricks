{
  "extends": "@formbricks/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../../packages/types/*.d.ts", "../../packages/ui/components/ThankYouCard.tsx", "../../packages/ui/components/ModalWithTabs.tsx", "../../packages/ui/components/EmptySpaceFiller.tsx", "../../packages/ui/components/RedirectCountDown.tsx", "../../packages/ui/components/Subheader.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@prisma/client/*": ["@formbricks/database/client/*"]
